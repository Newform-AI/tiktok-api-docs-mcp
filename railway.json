{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["bun"],
      "phases": {
        "setup": {
          "nixPkgs": ["bun"]
        },
        "install": {
          "cmds": ["bun install"]
        },
        "build": {
          "cmds": ["bun run build:http"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bun run start:http",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}